@import '../../helpers/mixins.scss';
@import '../../helpers/theme-var.scss';
@import '../../styles/color-palette.scss';
@import '../../styles/dimensions.scss';

$name: 'rcx-tabs';

$default-theme: (
  'margin': 0 0 0.5rem 0,
  'line-color': color('dark-300'),
  'line-width': dimension('border-width'),
  'margin-horizontal': 1rem,
);

.#{$name} {
  @include reset;

  margin: theme-var('margin');

  border-bottom: theme-var('line-width') solid theme-var('line-color');
}

.#{$name}__wrapper {
  display: flex;
  flex: 1;

  width: 100%;
  margin: 0 calc(-1 * #{theme-var('margin-horizontal')}) calc(-1 * #{theme-var('line-width')});
}
